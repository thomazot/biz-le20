.checkout-cart-index
    .page-title
        h1
            text-transform: none
            font-weight: bold
            font-size: 16px

        a
            display: flex
            justify-content: center
            align-items: center
            margin: 20px 0
            height: 50px
            border-radius: 4px
            background: #f2f4f7
            color: #999999
            font-weight: bold
            font-size: 12px

.cart-table
    header
        border-radius: 5px
        background: var(--color-black)
        text-transform: none

        .th:not(:first-child)
            visibility: hidden

    main
        border: 0

    h2.name a
        color: var(--color-black)
        text-transform: none
        font-weight: bold
        font-size: 12px

    .item-options
        display: none

    .sku
        color: #727272
        text-transform: uppercase
        font-weight: regular
        font-size: 11px

    .btn-remove
        color: #d13047
        font-size: 22px

    .cart-price
        color: #bcbcc5
        font-weight: medium
        font-size: 18px

    .product-cart-total .cart-price
        color: var(--primary)

.totals
    box-shadow: none

    .title
        display: none

.totals__table
    .a-right
        &:first-child
            color: color1_bg
            font-weight: medium
            font-size: 14px

    tfoot
        .a-right
            &:first-child
                padding-top: 19px
                padding-bottom: 19px
                border-radius: 5px 0 0 5px
                background: var(--color-black)
                color: #bcbcc5
                font-weight: medium
                font-size: 14px
                text-trasnform: uppercase

                &:before
                    content: 'TOTAL'

                strong
                    display: none

            &:last-child
                border-radius: 0 5px 5px 0
                background: var(--color-black)
                color: var(--primary)
                font-weight: bold
                font-size: 18px

.cart__boxes
    border-top: solid 1px #f1f3f6

    table
        tbody
            td:last-child
                color: #bcbcc5
                font-weight: medium
                font-size: 18px

.totals__content
    margin: 0

.cart__links
    padding: 1rem

    .btn-checkout
        display: block
        width: 100%
        height: 50px
        border-radius: 5px
        background: var(--primary)
        box-shadow: none
        color: var(--primary-contrast)
        text-transform: none
        font-weight: bold
        font-size: 16px

        &:hover
            background: darken(#5aa0de, 20%)

@media media-min-lg
    .totals
        padding-right: 0
        min-width: 0
        max-width: 100%

    .cart-table
        footer
            display: none

    .cart__links
        display: flex
        justify-content: flex-end
        padding-top: 20px !important

        .btn-checkout
            max-width: 290px

    .checkout-cart-index .page-title
        display: flex
        justify-content: space-between
        align-items: center

        a
            margin: 0
            width: 240px

    .cart
        &__conteudo
            display: flex

        &__lista-produtos
            flex: 1 1 0%

        &__boxes
            display: block
            flex: 0 0 225px
            margin: 0 20px 0 70px
            max-width: 225px

            .totals, .cart__links
                padding: 0

            > *
                min-width: 0

    .cart-product-line
        flex-wrap: wrap

        > div:first-child
            flex: 0 0 100%

    .cart-table .product-image
        flex: 0 0 220px

    .column-change-product
        display: none

    .product-cart-price
        margin-left: 236px

    .product-cart-price, .product-cart-actions, .product-cart-total
        margin-top: -80px
