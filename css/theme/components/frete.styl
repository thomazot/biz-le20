.frete
    margin-bottom: 50px

    &__title
        display: none

    &__content
        position: relative
        display: block

        &:before
            flex: 0 0 135px
            margin-right: 15px
            color: var(--color-text)
            content: 'Simulador de Frete:'
            font-weight: medium
            font-size: 14px

    &__form
        border-radius: 5px
        background: #f1f3f6

        label
            display: flex
            align-items: center
            height: 60px
            background: none
            box-shadow: none
            text-transform: none

            &.cep
                font-size: 0

                &:before
                    color: var(--color-text)
                    content: 'Cep'
                    font-weight: medium
                    font-size: 14px

            .ico
                display: none

        .input-box
            flex: 0 0 auto
            min-width: 0

        .input-text
            display: block
            padding: 0
            width: 80px
            height: 60px
            border: 0
            border: 0
            background: none
            box-shadow: none

    &__actions
        flex: 0 0 30px

        .btn
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            width: 30px
            height: 60px
            background: none
            box-shadow: none
            color: var(--color-text)
            font-weight: regular
            font-size: 20px

            &:hover
                background: none

    &__naosei
        position: absolute
        top: 100%
        right: 0
        width: 100%
        color: var(--color-text)
        text-align: center
        font-weight: regular
        font-size: 12px

    @media (min-width: 569px)
        &__form
            flex: 1
            min-width: 0

        &__content
            display: flex
            align-items: center

        &__naosei
            width: calc(100% - 135px)